pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1' // Your AWS region
        AWS_ACCOUNT_ID = '955708261042' // Your AWS account ID
        ECR_REPO_NAME = 'project_online' // Your ECR repo name (change if necessary)
        IMAGE_TAG = "${env.BUILD_ID}"
        LATEST_TAG = 'latest' // Tag for the latest image
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Izaindevops/Task2_Muhammad_Ramzan.git', // Your GitHub repo link
                    credentialsId: 'github-credentials-id'
            }
        }

        stage('Build Backend Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-backend:${IMAGE_TAG}", "./backend_code") // Path to backend Dockerfile
                }
            }
        }

        stage('Build Frontend Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-frontend:${IMAGE_TAG}", "./frontend_code") // Path to frontend Dockerfile
                }
            }
        }

        stage('Push Docker Images to ECR') {
            steps {
                script {
                    withAWS(credentials: 'aws-credentials-id', region: "${AWS_DEFAULT_REGION}") {
                        sh "aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"
                        
                        // Push Backend image
                        sh "docker tag ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-backend:${IMAGE_TAG} ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-backend:${LATEST_TAG}"
                        sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-backend:${IMAGE_TAG}"
                        sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-backend:${LATEST_TAG}"

                        // Push Frontend image
                        sh "docker tag ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-frontend:${IMAGE_TAG} ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-frontend:${LATEST_TAG}"
                        sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-frontend:${IMAGE_TAG}"
                        sh "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${ECR_REPO_NAME}-frontend:${LATEST_TAG}"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Images successfully pushed to ECR!'
        }
        failure {
            echo 'Failed to push the images to ECR.'
        }
    }
}
